---
import { toggleMenu } from "../scripts/menu.ts";

const navLinks = [
  { name: "Home", path: "/" },
  { name: "Projects", path: "/projects" },
  { name: "About", path: "/about" },
  { name: "Contact", path: "/contact" }
];
---

<nav class="flex justify-between items-center p-6 bg-gray-800">
  <a href="/" class="text-xl font-bold text-blue-400">Portfolio</a>

  <!-- Desktop Menu -->
  <ul class="hidden md:flex space-x-6">
    {navLinks.map((link) => (
      <li>
        <a href={link.path} class="hover:text-blue-400">{link.name}</a>
      </li>
    ))}
  </ul>

  <!-- Hamburger Icon for Mobile -->
  <div class="md:hidden">
    <button
      id="hamburger"
      class="flex flex-col justify-between items-center space-y-1 w-8 h-8"
      aria-label="Toggle Navigation"
      onClick={() => toggleMenu()}
    >
      <div class="w-6 h-1 bg-white"></div>
      <div class="w-6 h-1 bg-white"></div>
      <div class="w-6 h-1 bg-white"></div>
    </button>
  </div>

  <!-- Mobile Menu -->
  <ul id="mobile-menu" class="absolute top-16 right-0 w-2/3 bg-gray-800 text-center hidden md:hidden space-y-4 p-6">
    {navLinks.map((link) => (
      <li>
        <a href={link.path} class="block text-white hover:text-blue-400">{link.name}</a>
      </li>
    ))}
  </ul>
</nav>
