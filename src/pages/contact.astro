---
import Layout from "../layouts/Layout.astro";
import { setupFormHandler } from "../scripts/form.ts";

// Ensure script runs only on the client-side
setTimeout(() => {
  setupFormHandler();
}, 0);
---

<Layout>
  <h1 class="text-center">Contact Me</h1>
  <form id="contact-form" class="mt-6 max-w-md mx-auto bg-gray-800 p-6 rounded-lg">
    <label class="block mb-2">Name</label>
    <input
      id="name"
      type="text"
      class="w-full p-2 rounded bg-gray-700"
      required
    />

    <label class="block mt-4 mb-2">Email</label>
    <input
      id="email"
      type="email"
      class="w-full p-2 rounded bg-gray-700"
      required
    />

    <label class="block mt-4 mb-2">Message</label>
    <textarea
      id="message"
      class="w-full p-2 rounded bg-gray-700"
      required
    ></textarea>

    <button type="submit" class="bg-blue-400 text-white px-4 py-2 mt-4 rounded hover:bg-blue-500">
      Send Message
    </button>
  </form>
</Layout>
