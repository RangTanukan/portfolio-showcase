---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout>
  <section class="text-center mt-10">
    <h1 class="text-5xl font-bold text-blue-400">Welcome to My Portfolio</h1>
    <p class="text-gray-300 mt-4">Building sleek and elegant websites</p>
  </section>

  <section class="mt-10">
    <h2 class="text-3xl font-semibold">Featured Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
      <ProjectCard title="Project One" description="A cool project" link="#" />
      <ProjectCard title="Project Two" description="Another cool project" link="#" />
      <ProjectCard title="Project Three" description="Yet another cool project" link="#" />
    </div>
  </section>
</Layout>
