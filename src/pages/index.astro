---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
---

<Layout>
  <section class="text-center mt-10">
    <h1 class="text-5xl font-bold text-blue-400">Welcome to My Portfolio</h1>
    <p class="text-gray-300 mt-4">Crafting sleek and elegant websites with precision and care</p>
  </section>

  <!-- Featured Projects Section -->
  <section class="mt-10">
    <h2 class="text-3xl font-semibold">Featured Projects</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 mt-6">
      <ProjectCard title="Project One" description="A modern web application built with Astro" link="#" />
      <ProjectCard title="Project Two" description="A slick UI with dynamic interactions" link="#" />
      <ProjectCard title="Project Three" description="A fully responsive design system" link="#" />
    </div>
  </section>
</Layout>
